LINGUAGEM C

#include <stdio.h>

int main()
{
    int numero1 = 0;
    int numero2 = 0;
    
    printf("Digite o primeiro número: ")
    scanf("%d" , &numero1);
    printf("Digite o segun número: ")
    scanf("%d" , &numero2);
    
    int soma = 0;
    soma = numero1 + numero 2;
    
    printf("O valor é de %d" , soma);
}



